<div class="row-fluid">
  <div class="span2">
    <img src="<%= @thumbUrl %>" />
  </div>
  <div class="span10">
    <a href="" class="event-name">
      <%= @name %>
    </a>

    <div>
      <% if @all_day(): %>
        <em>All Day!</em><br/>
      <% else: %>
        Time: <%= @time() %> <br/>
        Time Format: <%= @time_format %> </br>
      <% end %>
      <small> added by <%= @user %></small> <a href="#" class="delete">x</a> <br/>
      <% if(@datetime isnt undefined) : %>
      datetime UTC: <%= moment(@datetime).calendar() %> <br/>
      <% end  %>
      <% if(@country isnt undefined): %>
      country: <%= @country %>
      <% end %>
    </div>
  </div>
</div>
