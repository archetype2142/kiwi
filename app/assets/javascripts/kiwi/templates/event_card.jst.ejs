<div class="event-image-container col-md-6">
  <img src="<%=mediumUrl%>" />
</div>
<div class="event-info-container col-md-6">
  <div class="event-heading-container">
    <span class="event-title"><%=name%></span>
    <span class="event-time-location">(<%=country_full_name%>, <%=prettyDate()%>)</span></div>
  <div class="event-description-container">
    <span class="event-description"><%=description%></span>
    <span class="event-submitter">(Submitted by <%=user%>)</span>
  </div>
  <div class="event-tools-container">
    <span class="event-upvotes"><i id="upvotes-icon" class="icon-caret-up"></i> <span class="upvote-counter"></span> upvotes</span>
    <div class="event-tool-container" data-tool="reports">
      <span class="event-tool" data-action="report">Report</span>
    </div>
    <div class="event-tool-container" data-tool="reminders">
      <div class="event-tool-popover"></div>
      <span class="event-tool">Set Reminder</span>
    </div>
    <% if (edit_allowed) { %>
      <div class="event-tool-container">
        <span class="event-tool" data-action="edit">(Edit my event)</span>
      </div>
     <% } %>
    <div class="event-likes-container">
      <div class="fb-like" data-layout="button_count" data-action="like"></div>
      <a href="https://twitter.com/share" class="twitter-share-button" data-via="Forekast">Tweet</a>
      <div class="g-plusone" data-size="medium" data-annotation="bubble" data-width="200"></div>
    </div>
  </div>
</div>
