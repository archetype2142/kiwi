<!DOCTYPE html>
<html>
<head>
  <title>Forekast</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="container">
  <div id="navbar-region" class="navbar"></div>
  <div id="main-region" class="col-md-9"></div>
  <script type="text/javascript">
    $(function() { 
      FK.App.start({
        countries: <%= raw Country.all.sort(order: 1).to_json() %>,
        events: [],
        links:
          {
           logout: '<%= destroy_user_session_path %>',
           login: '<%= new_user_session_path %>',
           user_edit: '<%= edit_user_registration_path %>',
           register: '<%= new_user_registration_path %>'
          },
        user: <%= user_signed_in? ? raw(current_user.to_json()) : 'null' %>
      });
      if (!Backbone.History.started)
        Backbone.history.start()     
    });
  </script>
</body>
</html>
