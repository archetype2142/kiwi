<h1 style="font-family: 'Montserrat', sans-serif; font-weight: 700, font-size: 35px; letter-spacing: 1px; color: #222;">FOREKAST</h1><br />
<img src="<%=url_for(controller: 'home', action: 'index', only_path: false)%><%=@event.image.url(:medium)%>" /><br /><br />
<a href="<%=url_for(controller: 'home', action: 'index', only_path: false)%>events/show/<%=@event.id.to_s%>"><%=@event.name%></a><br /><br />
<span><%=@event.get_local_datetime(@reminder.recipient_time_zone).to_time.strftime("%A, %b %e, %l:%M %p")%></span> <br /><br />
<span>(<%=@reminder.reminder_time%>)</span>
