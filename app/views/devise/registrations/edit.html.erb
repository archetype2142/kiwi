<h3>Profile Settings</h3>
<div class="well col-md-10">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),
                       :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>
  <% if resource.errors.present? %>
    <div class="alert alert-warning">
      <p> <%= devise_error_messages! %></p>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label  :username, class: 'col-sm-offset-2 col-md-2 col-sm-2 control-label' %>
    <div class="col-sm-offset-0 col-md-4 col-sm-4">
      <%= f.text_field :username, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-offset-2 col-sm-2 control-label' %>
    <div class="col-sm-offset-0 col-sm-4">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: 'col-sm-offset-2 col-sm-2 control-label' %>
    <div class="col-sm-offset-0 col-sm-4">
      <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="row form-footer">
    <div class="col-sm-offset-2 col-sm-6">
    <%= link_to 'Change password',  change_password_path, class: 'btn btn-alt' %>
    <%= f.submit "Update", class: 'btn btn-focus' %></div>
    </div>
  </div>
<% end %>
</div>
